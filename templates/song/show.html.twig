{% extends 'base.html.twig' %}

{% block title %}Song{% endblock %}

{% block body %}
    <h1>Song</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ song.id }}</td>
            </tr>
            <tr>
                <th>IdSong</th>
                <td>{{ song.idSong }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ song.title }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ song.url }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>{{ song.cover }}</td>
            </tr>
            <tr>
                <th>Visibility</th>
                <td>{{ song.visibility ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreateAt</th>
                <td>{{ song.createAt ? song.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_song_index') }}">back to list</a>

    <a href="{{ path('app_song_edit', {'id': song.id}) }}">edit</a>

    {{ include('song/_delete_form.html.twig') }}
{% endblock %}
