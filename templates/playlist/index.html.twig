{% extends 'base.html.twig' %}

{% block title %}Playlist index{% endblock %}

{% block body %}
    <h1>Playlist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdPlaylist</th>
                <th>Title</th>
                <th>Public</th>
                <th>CreateAt</th>
                <th>UpdateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for playlist in playlists %}
            <tr>
                <td>{{ playlist.id }}</td>
                <td>{{ playlist.idPlaylist }}</td>
                <td>{{ playlist.title }}</td>
                <td>{{ playlist.public ? 'Yes' : 'No' }}</td>
                <td>{{ playlist.createAt ? playlist.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ playlist.updateAt ? playlist.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_playlist_show', {'id': playlist.id}) }}">show</a>
                    <a href="{{ path('app_playlist_edit', {'id': playlist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_playlist_new') }}">Create new</a>
{% endblock %}
